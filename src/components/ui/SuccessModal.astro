<div id="successModal" class="hidden relative items-center w-screen h-screen bg-opacity-60 z-50">
  <div
    class="flex justify-center mx-auto p-5 border w-96 shadow-lg rounded-md bg-white max-h-[500px]"
  >
    <div class="mt-3 text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"
          ></path>
        </svg>
      </div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">Subscription Successful!</h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500">Thank you for subscribing</p>
      </div>
      <div class="items-center px-4 py-3">
        <button
          id="closeModal"
          class="px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  const modal = document.getElementById('successModal');
  const closeButton = document.getElementById('closeModal');

  closeButton.addEventListener('click', () => {
    modal.classList.add('hidden');
  });

  // Add this to window to make it accessible from contactform.astro
  window.showSuccessModal = () => {
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  };
</script>
